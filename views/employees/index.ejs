<%- include("../partials/header") %>
<%#- include("../partials/loading") %>
<%- include("../partials/header-sidebar") %>
<main id="main" class="main">
    <div class="pagetitle">
    <h1>Employees</h1>
    <nav>
        <ol class="breadcrumb">
        <li class="breadcrumb-item"><a href="/">Home</a></li>
        <li class="breadcrumb-item active">Employees</li>
        </ol>
    </nav>
    </div><!-- End Page Title -->
    <section class="section">

        <div class="row my-3">

            <!-- ===== START: Modified Weekly Attendance Card ===== -->
            <div class="row col-md-6">
                <div class="card-body">
                    <div class="table-responsive">
                      <!-- ei = Employee information -->
                        <table id="eiWeeklyAttendanceTable" class="table table-bordered table-striped table-hover w-100">
                            <!-- Inside index.ejs -->
                            <thead>
                                <tr>
                                    <th style="width: 50px;">Employee</th> <!-- Keep width for Employee column -->
                                    
                                </tr>
                            </thead>
    
                            <tbody>
                            </tbody>
                        </table>
                    </div>
                </div>
            </div>
            <!-- ===== END: Modified Weekly Attendance Card ===== -->


            <!-- ===== START: Pie Chart Card ===== -->
            <div class="row col-md-6">
                <div id="pieChart" class="echart "></div>

              <script>
                document.addEventListener("DOMContentLoaded", () => {
                  echarts.init(document.querySelector("#pieChart")).setOption({
                    title: {
                      text: 'Ticket Statistics',
                      subtext: 'Attendance',
                      left: 'center',
                    },
                    tooltip: {
                      trigger: 'item'
                    },
                    legend: {
                      orient: 'vertical',
                      left: 'left'
                    },
                    series: [{
                      name: 'Access From',
                      type: 'pie',
                      radius: '50%',
                      data: [{
                          value: 1048,
                          name: 'Search Engine'
                        },
                        {
                          value: 735,
                          name: 'Direct'
                        },
                        {
                          value: 580,
                          name: 'Email'
                        },
                        {
                          value: 484,
                          name: 'Union Ads'
                        },
                        {
                          value: 300,
                          name: 'Video Ads'
                        }
                      ],
                      emphasis: {
                        itemStyle: {
                          shadowBlur: 10,
                          shadowOffsetX: 0,
                          shadowColor: 'rgba(0, 0, 0, 0.5)'
                        }
                      }
                    }]
                  });
                });
              </script>


            </div>
            <!-- ===== END: Pie Chart Card ===== -->
    
            <!-- ===== END: Modified Weekly Attendance Card ===== -->
        </div>



        <!-- ===== START: All Employees Card (Using Previous DataTable Code) ===== -->
        <div class="card shadow-sm">
            <div class="card-body pt-4">

                <div class="d-flex justify-content-between align-items-center mb-3">
                    <h5 class="card-title p-0 m-0">All Employees</h5>
                    <!-- ei = Employee information -->
                    <button id="eiCreate" type="button" class="btn btn-success btn-sm" data-bs-toggle="modal" data-bs-target="#eCreateEmployee">
                        <i class="bi bi-plus-lg me-1"></i> Create New
                    </button>
                </div>

                <div class="table-responsive">
                  <!-- ei = Employee information -->
                    <table id="eiTable" class="table table-bordered table-striped table-hover w-100">
                        <thead class="table-light">
                            <tr>
                                <th>Name</th>
                                <th>Contact Number</th>
                                <th>Address</th>
                                <th>Job Title</th>
                                <!-- <th>Actions</th> -->
                            </tr>
                        </thead>
                        <tbody>
                            <!-- Populated by DataTables -->
                        </tbody>
                    </table>
                </div>

            </div>
        </div>
         <!-- ===== END: All Employees Card ===== -->

    </section>
</main><!-- End #main -->

<%- include("../partials/toaster") %>
<%- include("modal/create") %>
