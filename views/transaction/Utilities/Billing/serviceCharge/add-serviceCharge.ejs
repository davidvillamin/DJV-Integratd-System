<!-- tsca = Transaction Service Charge add-->
<div class="modal fade" id="tscAddModal" tabindex="-1">
    <div class="modal-dialog modal-md">
        <div class="modal-content">
            <div class="modal-header">
                <h5 class="modal-title">Add Service Charge</h5>
                <button type="button" class="btn-close" data-bs-dismiss="modal" aria-label="Close"></button>
            </div>
            <div class="modal-body">
                <form class="needs-validation" id="tscAdd" novalidate enctype="multipart/form-data">
                    <!-- tsca = Transaction Service Charge Add-->
                    <div class="mb-3">
                        <label for="tscaDescription" class="form-label">Description</label>
                        <input type="text" class="form-control" id="tscaDescription" required>
                    </div>
                    <div class="mb-3">
                        <label for="tscaPrice" class="form-label">Price</label>
                        <input type="text" class="form-control" id="tscaPrice" required>
                    </div>

                    <div class="modal-footer">
                        <button type="reset" class="btn btn-secondary btn-sm" data-bs-dismiss="modal">Close</button>
                        <button type="submit" class="btn btn-primary btn-sm">Save changes</button>
                    </div>
                </form>
            </div>
        </div>
    </div>
</div>
