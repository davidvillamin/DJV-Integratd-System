<script>
function updateOverview(period) {
    // Update dropdown button text
    document.getElementById('overviewDropdown').textContent = period.charAt(0).toUpperCase() + period.slice(1);
    
    // TODO: Add logic to filter/update overview cards based on selected period
    // This can fetch data from your backend or filter existing data
    console.log('Overview period changed to:', period);
}

// Initialize Monthly Report Chart with Chart.js
