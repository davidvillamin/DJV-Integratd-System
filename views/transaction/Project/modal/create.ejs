<div class="modal fade" id="tpCreateModal" tabindex="-1">
    <div class="modal-dialog modal-xl">
        <div class="modal-content">
            <div class="modal-header">
                <h5 class="modal-title">Create Project Transaction</h5>
                <button type="button" class="btn-close" data-bs-dismiss="modal" aria-label="Close"></button>
            </div>
            <div class="modal-body">
                <form class="needs-validation" id="tpCreate" novalidate enctype="multipart/form-data">
                    <div class="mb-3 d-flex justify-content-between">
                        <div class="col-md-4">
                            <div class="form-floating">
                                <input type="text" class="form-control" id="tpcJobOrderNumber" placeholder="Job Order Number" required>
                                <label for="tpcJobOrderNumber">*Job Order Number</label>
                            </div>
                        </div>
                        <div class="col-md-4">
                            <div class="form-floating">
                                <input type="date" class="form-control" id="tpcRecieveDate" placeholder="Recieve Date" required>
                                <label for="tpcRecieveDate">*Receive Date</label>
                            </div>
                        </div>
                    </div>
                    <div class="col-md-12">
                        <div class="form-floating mb-3">
                            <select class="form-select" id="tpcClientName" aria-label="Client Name" required>
                                <option>Please select</option>
                            </select>
                            <label for="tpcClientName">*Client Name</label>
                        </div>
                    </div>
                    <div class="row">
                        <div class="col-md-6">
                            <div class="form-floating">
                                <input type="text" class="form-control" id="tpcDevice" placeholder="Device" required>
                                <label for="tpcDevice">*Device (Brand / Model)</label>
                            </div>
                        </div>
                        <div class="col-md-6">
                            <div class="form-floating">
                                <input type="text" class="form-control" id="tpcSerial" placeholder="Serial Number" required>
                                <label for="tpcSerial">*Serial Number</label>
                            </div>
                        </div>
                    </div>
                    <div class="col-md-12">
                        <div class="form-floating mb-3">
                            <p class="my-3">Notes</p>
                            <!-- <div id="tpcNotes" class="quill-editor-full"> -->
                            <div id="tpcNotes">
                            </div>
                        </div>
                    </div>
                    <div class="modal-footer">
                        <button type="reset" class="btn btn-secondary btn-sm" data-bs-dismiss="modal">Close</button>
                        <button type="submit" class="btn btn-primary btn-sm">Save changes</button>
                    </div>
                </form>
            </div>
        </div>
    </div>
</div>
        