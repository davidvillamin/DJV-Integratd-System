    <div class="pagetitle">
        <h1 class="placeholder-glow">
            <span class="dvName">
                <span class="placeholder col-1"></span>
            </span>
        </h1>
        <nav>
            <ol class="breadcrumb">
                <li class="breadcrumb-item"><a href="/">Home</a></li>
                <li class="breadcrumb-item"><a href="/Device">Device</a></li>
                <li class="breadcrumb-item active dvName"></li>
            </ol>
        </nav>
    </div><!-- End Page Title -->

    <section class="section profile">
        <div class="row">
            <div class="col-xl-4">
                <div class="card">
                    <!-- parts information -->
                    <div class="card-body profile-card pt-4 d-flex flex-column align-items-center text-center placeholder-glow">
                        <img id="pivProfile" src="/assets/img/product-2.jpg" alt="Profile" class="rounded-circle mb-3" style="width: 100px; height: 100px;">
                        <div class="d-flex align-items-center" >
                            <h2 class="mb-1 dvName">
                                <span class="placeholder col-12"></span>
                            </h2>
                            <i id="dvEdit" class="bi bi-pencil-square pencil-icon" data-bs-toggle="modal" data-bs-target=""></i>
                        </div>
                   </div>
                </div>
            </div>

            <div class="col-xl-8">
                <div class="card">
                    <div class="card-body pt-3">
                        <ul class="nav nav-pills mb-3 justify-content-center" id="pills-tab" role="tablist">
                            <li class="nav-item" role="presentation">
                                <button class="nav-link active" id="pills-home-tab" data-bs-toggle="pill" data-bs-target="#pills-home" type="button" role="tab" aria-controls="pills-home" aria-selected="true">
                                    Inventory
                                </button>
                            </li>
                            <li class="nav-item" role="presentation">
                                <button class="nav-link" id="pills-contact-tab" data-bs-toggle="pill" data-bs-target="#pills-contact" type="button" role="tab" aria-controls="pills-contact" aria-selected="false">
                                    Deployed
                                </button>
                            </li>
                          </ul>
                          <div class="tab-content" id="pills-tabContent">
                                <div class="tab-pane fade show active" id="pills-home" role="tabpanel" aria-labelledby="pills-home-tab" tabindex="0">
                                    <div class="d-flex flex-row-reverse">
                                        <!--=========== ds = device serial ===========-->
                                        <button class="btn btn-success" data-bs-toggle="modal" data-bs-target="#dvsCreateModal">
                                            Add
                                        </button>
                                    </div>
                                    <table class="table" id="diViewTable">
                                        <thead>
                                            <td>Serial Number</td>
                                            <td>Brand</td>
                                            <td>Model</td>
                                            <!-- <td>Description</td> -->
                                            <td>Action</td>
                                            
                                        </thead>
                                        
                                    </table>
                                </div>
                                
                                <div class="tab-pane fade" id="pills-contact" role="tabpanel" aria-labelledby="pills-contact-tab" tabindex="0">
                                    
                                </div>
                            </div>
