<!-- ipie = Inventory Product Image Edit -->
<div class="modal fade" id="ipiEditModal" tabindex="-1">
    <div class="modal-dialog modal-lg">
        <div class="modal-content">
            <div class="modal-header">
                <h5 class="modal-title">Edit Images</h5>
                <button type="button" class="btn-close" data-bs-dismiss="modal" aria-label="Close"></button>
            </div>
            <div class="modal-body">
                <!-- tia = Transaction Image Add -->
                <form class="needs-validation" id="ipiEdit" novalidate enctype="multipart/form-data">
                    <div class="row">
                        <div class="col-4">
                            <h6>Image List</h6>
                            <div class="list-group" id="ipieImageList" role="tablist">
                            </div>
                        </div>
                        <div class="col-5">
                            <input type="hidden" id="ipieImageId">
                            <div class="mb-3">
                                <label for="ipieTitle" class="form-label">Title</label>
                                <input type="text" class="form-control" id="ipieTitle" required>
                            </div>
                            <div class="input-group mb-3">
                                <input type="file" class="form-control" id="ipieImage" accept="image/*" required>
                            </div>
                            <div class="mb-3">
                                <label for="ipieDescription" class="form-label">Description</label>
                                <textarea class="form-control" id="ipieDescription" rows="3"></textarea>
                            </div>
                        </div>
                        <div class="col-3 d-flex justify-content-center flex-column align-items-center">
                            <div class="card">
                                <h6 class="cad-text ms-3 mt-3">Preview</h6>
                                <div class="card-body">
                                    <img id="ipiePreview" src="/assets/img/no-image.jpg" class="img-thumbnail w-auto">
                                </div>  
                            </div>
                            
                            <button class="btn btn-danger ipieDelete" style="display: none;"><i class="bi bi-trash"></i> Delete</button>
                        </div>
                    </div>
                    
                    <div class="modal-footer">
                        <button type="reset" class="btn btn-secondary" data-bs-dismiss="modal">Close</button>
                        <button type="submit" class="btn btn-primary">Save image</button>
                    </div>
                </form>
            </div>
        </div>
    </div>
</div>
        