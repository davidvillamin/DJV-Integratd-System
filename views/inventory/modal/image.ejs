<!-- tui = Transaction  Image -->
<div class="modal fade" id="tiAddModal" tabindex="-1">
    <div class="modal-dialog modal-lg">
        <div class="modal-content">
            <div class="modal-header">
                <h5 class="modal-title">Add Images</h5>
                <button type="button" class="btn-close" data-bs-dismiss="modal" aria-label="Close"></button>
            </div>
            <div class="modal-body">
                <!-- tia = Transaction Image Add -->
                <form class="needs-validation" id="tiAdd" novalidate enctype="multipart/form-data">
                    <div class="row">
                        <div class="col-8">
                            <div class="mb-3">
                                <label for="tiaTitle" class="form-label">Title</label>
                                <input type="text" class="form-control" id="tiaTitle" required>
                            </div>
                            <div class="input-group mb-3">
                                <input type="file" class="form-control" id="tiaImage" accept="image/*" required>
                            </div>
                            <div class="mb-3">
                                <label for="tiaDescription" class="form-label">Description</label>
                                <textarea class="form-control" id="tiaDescription" rows="3"></textarea>
                            </div>
                        </div>
                        <div class="col-4">
                            <div class="card">
                                <h6 class="card-text ms-3 mt-3">Preview</h6>
                                <div class="card-body">
                                    <img id="tiaPreview" src="/assets/img/no-image.jpg" class="img-thumbnail w-auto">
                                </div>  
                            </div>
                        </div>
                    </div>
                    
                    <div class="modal-footer">
                        <button type="reset" class="btn btn-secondary" data-bs-dismiss="modal">Close</button>
                        <button type="submit" class="btn btn-primary">Save image</button>
                    </div>
                </form>
            </div>
        </div>
    </div>
</div>
        